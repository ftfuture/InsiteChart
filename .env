# InsiteChart Development Environment Variables

# Application Settings
APP_NAME=InsiteChart API
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database Settings - Using SQLite for development
DATABASE_URL=sqlite:///./insitechart_dev.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Settings
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=20

# Cache Settings
CACHE_TTL_DEFAULT=300
CACHE_TTL_SHORT=60
CACHE_TTL_LONG=3600

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# External API Settings
YAHOO_FINANCE_TIMEOUT=30
REDDIT_TIMEOUT=30
TWITTER_TIMEOUT=30

# Reddit API Credentials
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=InsiteChart/1.0

# Twitter API Credentials
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# Alpha Vantage API (Optional)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# Security Settings
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:8501"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentiment Analysis Settings
SENTIMENT_ANALYSIS_ENABLED=true
SENTIMENT_BATCH_SIZE=100
SENTIMENT_UPDATE_INTERVAL=300

# Data Collection Settings
DATA_COLLECTION_ENABLED=true
DATA_COLLECTION_INTERVAL=60
MAX_STOCKS_PER_COLLECTION=50

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=insitechart-backups
BACKUP_S3_REGION=us-east-1

# WebSocket Settings
WEBSOCKET_ENABLED=true
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS=1000

# Internationalization Settings
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=["en", "ko", "ja", "zh", "es", "fr", "de", "it", "pt", "ru"]

# Frontend Settings
BACKEND_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000/api/v1

# Development Settings
TESTING=true